<Page x:Class="XamlBrewer.Universal.OneDriveApi.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:XamlBrewer.Universal.OneDriveApi"
      xmlns:vm="using:XamlBrewer.Universal.OneDriveApi.ViewModels"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:MainViewModel />
    </Page.DataContext>

    <Hub x:Name="MainHub"
         Header="OneDrive SDK Sample">
        <Hub.Background>
            <ImageBrush ImageSource="/Assets/starryknight.jpg"
                        Stretch="UniformToFill"
                        Opacity=".25"
                        AlignmentX="Right"
                        AlignmentY="Top" />
        </Hub.Background>

        <HubSection Header="Browse">
            <DataTemplate>
                <StackPanel>
                    <Button Content="Initialize"
                            Command="{Binding InitializeCommand}"
                            HorizontalAlignment="Stretch" />
                    <Button Content="(Re)create assets"
                            Command="{Binding CreateAssetsCommand}"
                            HorizontalAlignment="Stretch"
                            Margin="0 10 0 0" />
                    <Button Content="Browse"
                            Command="{Binding BrowseCommand}"
                            HorizontalAlignment="Stretch"
                            Margin="0 10 0 0" />
                    <ListView ItemsSource="{Binding Files}"
                              DisplayMemberPath="Name"
                              Margin="0 10 0 0" />
                </StackPanel>
            </DataTemplate>
        </HubSection>
        <HubSection Header="Update">
        </HubSection>
        <HubSection Header="Synchronize">
        </HubSection>
    </Hub>
</Page>